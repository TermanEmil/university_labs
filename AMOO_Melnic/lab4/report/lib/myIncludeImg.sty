\ProvidesPackage{myIncludeImg}

\RequirePackage{graphicx}
\RequirePackage{mdframed}
\RequirePackage{xcolor}
\RequirePackage{xparse}
\RequirePackage{caption}
\RequirePackage{float}

\definecolor{myLightGray}{rgb}{0.85,0.85,0.85}

\def \nImg {1}

\newcounter{nImg}
\renewcommand{\nImg}{\arabic{nImg}}

\DeclareCaptionLabelFormat{ImgCaption}{\textbf{Img \nImg}}

% #1 path
% #2 scale, def = 1
% #3 caption
% #4 label

\DeclareDocumentCommand{\myIncludeImg}{m O{1} O{} O{Img\nImg}}{
	\refstepcounter{nImg}
	\captionsetup{labelformat=ImgCaption,labelsep=colon}

	\begin{center}
		\begin{figure}[!ht]
			\begin{mdframed}[backgroundcolor=black!5,
							rightline=false,
							leftline=false]
				\begin{center}
					\includegraphics[scale=#2]{#1}
					\caption{#3}
				\end{center}
			\end{mdframed}

			\label{fig:#4}
		\end{figure}
	\end{center}
}